{
  "compilerOptions": {
    "target": "esnext",
    "baseUrl": ".",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "paths": {
      "@lib/*": ["src/lib/*"],
      "@utils/*": ["src/utils/*"],
      "@config/*": ["src/config/*"],
      "@assets/*": ["src/assets/*"],
      "@components/*": ["src/components/*"],
      "@layout/*": ["src/layout/*"],
      "@framework": ["../packages/local/src"],
      "@framework/*": ["../packages/local/src/*"]
    }
  },
  "include": ["next-env.d.ts", "**/*.ts", "**/*.tsx", "components/ui/Input/Input.tsx", "src/layout/ProjectNavigation/ProjectNavigation.js"],
  "exclude": ["node_modules"]
}
